<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.LandingPageFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.LandingPageActivity"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/hello_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello, {username}"
            android:layout_marginTop="100dp"
            android:textSize="25dp"
            />
        <LinearLayout
            android:layout_below="@id/hello_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            >
            <TextView
                android:id="@+id/welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Welcome to"
                android:layout_below="@id/hello_user"
                android:textSize="50dp"
                />
            <TextView
                android:id="@+id/buzyPC_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="BuzyPC"
                android:layout_below="@id/welcome_text"
                android:textColor="@color/bz_honeyYellow"
                android:textStyle="bold"
                android:textSize="75dp"
                />

        </LinearLayout>

    </RelativeLayout>
</FrameLayout>