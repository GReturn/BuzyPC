<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.LandingPageFragment"
    android:id="@+id/fragment_landing_page">

    <RelativeLayout
        android:id="@+id/main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/hello_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/underline"
            android:fontFamily="@font/ubuntu_mono"
            android:padding="10dp"
            android:text="Hello, {username}"
            android:textSize="25dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/hello_user"
            android:layout_marginHorizontal="20dp"
            android:orientation="vertical">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:id="@+id/relativeLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/buzyPCHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/ubuntu_bold"
                        android:text="@string/buzyPCHeading"
                        android:textColor="@color/bz_honeyYellow"
                        android:layout_marginTop="30dp"
                        android:textSize="40sp" />

                    <TextView
                        android:id="@+id/buzyPCSubheading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/buzyPCSubheading"
                        android:layout_below="@id/buzyPCHeading"
                        android:layout_marginTop="30dp"
                        android:fontFamily="@font/ubuntu_medium"

                        android:textSize="20sp"
                        />

                    <TextView
                        android:id="@+id/keyFeatures"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/keyFeatures"
                        android:layout_below="@id/buzyPCSubheading"
                        android:layout_marginTop="30dp"
                        android:textSize="20dp"
                        android:fontFamily="@font/ubuntu_bold"
                        />

                    <LinearLayout
                        android:id="@+id/keyFeaturesLinearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_below="@id/keyFeatures"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/keyFeaturesBody"
                            android:padding="15dp"
                            android:lineHeight="20dp"


                            />

                    </LinearLayout>

                </RelativeLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>
</FrameLayout>