<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.navigation.fragments.LandingPageFragment"
    android:id="@+id/fragment_landing_page"
    android:backgroundTint="?android:attr/colorBackground"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/main"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"

            android:padding="24dp"
            >

            <LinearLayout
                android:id="@+id/landing_title"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginTop="@dimen/space_medium"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:layout_width="45dp"
                    android:layout_height="45dp"
                    android:layout_gravity="center"

                    android:src="@drawable/mascot_buzybee"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"

                    android:fontFamily="@font/ubuntu_bold"
                    android:text="BuzyPC"
                    android:textColor="?attr/colorControlNormal"
                    android:textSize="48sp"
                    />

            </LinearLayout>

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardview_landing_first_cta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:layout_marginTop="@dimen/space_normal"

                android:backgroundTint="?attr/colorControlNormal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/landing_title">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"

                    android:paddingVertical="@dimen/space_medium"
                >

                    <TextView
                        android:id="@+id/hello_user"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:fontFamily="@font/ubuntu_medium"
                        android:text="Hello, {username}"
                        android:textAlignment="center"
                        android:textColor="?attr/colorOnSecondary"
                        android:textSize="@dimen/font_large" />

                    <TextView
                        android:id="@+id/buzyPCHeading"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:fontFamily="@font/ubuntu_bold"

                        android:paddingTop="@dimen/space_small"
                        android:text="@string/buzyPCHeading"
                        android:textAlignment="center"
                        android:textAllCaps="true"

                        android:textColor="?attr/colorOnSecondary"
                        android:textSize="@dimen/font_title_large" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/button_landing_build_now_cta"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"

                        android:layout_marginTop="@dimen/space_xlarge"
                        android:backgroundTint="?attr/colorOnSecondary"
                        android:fontFamily="@font/ubuntu_bold"
                        android:text="Build Now"
                        android:textAlignment="center"
                        android:textColor="?attr/colorControlNormal"
                        android:textSize="@dimen/font_title_large"

                        app:cornerRadius="5dp" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <View
                android:id="@+id/view_landing_line_divider"
                android:layout_width="match_parent"
                android:layout_height="2dp"

                android:layout_marginTop="@dimen/space_medium"

                android:background="?attr/colorOnSecondary"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/cardview_landing_first_cta" />

            <TextView
                android:id="@+id/textview_landing_overview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/space_xsmall"

                android:fontFamily="@font/ubuntu_bold"
                android:text="Overview"
                android:textSize="@dimen/font_title_large"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/view_landing_line_divider" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"

                android:layout_marginTop="@dimen/space_medium"

                app:layout_constraintTop_toBottomOf="@+id/textview_landing_overview"
            >

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardview_landing_overview_buildlist"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"

                    android:backgroundTint="?attr/colorControlNormal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/landing_title">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:paddingHorizontal="@dimen/space_xsmall"
                        android:paddingVertical="@dimen/space_medium">

                        <TextView
                            android:id="@+id/textview_landing_overview_current_build_list"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:fontFamily="@font/ubuntu_bold"
                            android:text="Total Builds"
                            android:textAlignment="center"
                            android:textColor="?attr/colorOnSecondary"
                            android:textSize="@dimen/font_larger" />


                        <TextView
                            android:id="@+id/textview_dynamic_build_list_counter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/space_small"

                            android:fontFamily="@font/ubuntu_bold"

                            android:text="?"
                            android:textAlignment="center"
                            android:textColor="?attr/colorOnSecondary"
                            android:textSize="@dimen/font_title_large"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:fontFamily="@font/ubuntu_bold"

                            android:text="builds"
                            android:textAlignment="center"
                            android:textColor="?attr/colorOnSecondary"
                            android:textSize="@dimen/font_normal"
                        />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_landing_view_builds"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/space_normal"

                            android:backgroundTint="?attr/colorOnSecondary"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="View My Builds"
                            android:textAlignment="center"
                            android:textSize="@dimen/font_normal"
                            android:textColor="?attr/colorControlNormal"

                            app:cornerRadius="5dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <Space
                    android:layout_width="@dimen/space_normal"
                    android:layout_height="wrap_content"
                />

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/cardview_landing_overview_checklist"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"

                    android:layout_weight="1"

                    android:backgroundTint="?attr/colorControlNormal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/landing_title">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"

                        android:paddingHorizontal="@dimen/space_xsmall"
                        android:paddingVertical="@dimen/space_medium">

                        <TextView
                            android:id="@+id/textview_landing_overview_checklist_items"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:fontFamily="@font/ubuntu_bold"
                            android:text="Checklist"
                            android:textAlignment="center"
                            android:textColor="?attr/colorOnSecondary"
                            android:textSize="@dimen/font_larger"
                        />

                        <TextView
                            android:id="@+id/textview_dynamic_checklist_list_counter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingTop="@dimen/space_small"

                            android:fontFamily="@font/ubuntu_bold"

                            android:text="?"
                            android:textAlignment="center"
                            android:textColor="?attr/colorOnSecondary"
                            android:textSize="@dimen/font_title_large"
                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"

                            android:fontFamily="@font/ubuntu_bold"

                            android:text="items"
                            android:textAlignment="center"
                            android:textColor="?attr/colorOnSecondary"
                            android:textSize="@dimen/font_normal"
                            />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/button_landing_go_to_checklist"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/space_normal"

                            android:backgroundTint="?attr/colorOnSecondary"
                            android:fontFamily="@font/ubuntu_bold"
                            android:text="See Checklist"
                            android:textAlignment="center"

                            android:textColor="?attr/colorControlNormal"
                            android:textSize="@dimen/font_normal"

                            app:cornerRadius="5dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>


            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>


</FrameLayout>