<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.NewBuildSummaryActivity"
    android:orientation="vertical"
    app:layout_scrollEffect="compress"
    android:fadeScrollbars="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_BuildSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$buildName Summary"
            android:textSize="30sp"
            android:fontFamily="@font/ubuntu_bold"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/radarChartContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:backgroundTint="@color/bz_deepCharcoal"
            android:layout_marginHorizontal="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="10dp"
            >
        </androidx.cardview.widget.CardView>
        <include layout ="@layout/compatibility_score_view"/>


        <include
            layout="@layout/view_component_grid"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginHorizontal="40dp"
            android:layout_marginTop="20dp"

            />

        <Button
            android:id="@+id/btn_SaveBuild"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="40dp"
            android:layout_height="match_parent"
            android:text="Save Build"
            />
    </LinearLayout>

</ScrollView>