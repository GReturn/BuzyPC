<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:backgroundTint="@color/bz_white_semi_transparent"

    app:cardCornerRadius="10dp"
    app:strokeWidth="2sp"
    app:strokeColor="@color/bz_darkGray"

    android:id="@+id/card_checklist_item_ram"
    android:layout_margin="10dp"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:padding="@dimen/space_normal"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/checkbox_componentRAMBoughtStatusMark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                app:buttonTint="@color/bz_darkGray"
                app:buttonIconTint="@color/white"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent" >

            <androidx.cardview.widget.CardView
                android:id="@+id/imgCard"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardCornerRadius="5dp"

                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgRAM"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/bz_honeyYellow"
                    android:scaleType="fitXY"
                    android:src="@drawable/ram_vector"
                    app:tint="@color/bz_darkGray" />

            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/rlCard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"

            android:paddingStart="@dimen/space_small"
            >


            <TextView
                android:id="@+id/textView_componentLabel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/ubuntu_bold"
                android:text="RAM"
                android:textColor="@color/bz_darkGray"
                android:textSize="@dimen/font_large"

                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView_componentRAMName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"

                android:fontFamily="@font/ubuntu_medium"
                android:text="$1$s"
                android:textColor="@color/bz_darkGray"
                android:textSize="@dimen/font_normal"
                android:maxLines="2"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textView_componentLabel" />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"


                android:orientation="vertical"
                android:gravity="end"

                app:layout_constraintTop_toBottomOf="@+id/textView_componentRAMName"
                app:layout_constraintEnd_toEndOf="parent"
                >

                <TextView
                    android:id="@+id/textView_componentRAMPrice"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:fontFamily="@font/ubuntu_bold"
                    android:text="@string/pricePHP"
                    android:textColor="@color/bz_darkGray"
                    android:textSize="@dimen/font_normal"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>