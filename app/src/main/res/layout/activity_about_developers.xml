<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center_horizontal">

    <!-- Title -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meet the Developers"
        android:textSize="24sp"
        android:textStyle="bold"
        android:paddingBottom="16dp"/>

    <!-- Developer 1 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@drawable/rounded_card"
        android:padding="16dp"
        android:layout_marginHorizontal="10dp"
        android:layout_marginBottom="12dp"
        android:elevation="6dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"
            android:contentDescription="Profile Image"
            android:background="@drawable/devaus"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dev1"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/bz_almostBlack"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dev1_occupation"
                android:textSize="14sp"
                android:textColor="@color/bz_almostBlack"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dev1_desc"
                android:textSize="12sp"
                android:textColor="@color/bz_almostBlack"
                />
        </LinearLayout>
    </LinearLayout>

    <!-- Developer 2 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="10dp"

        android:background="@drawable/rounded_card"
        android:padding="16dp"
        android:elevation="6dp">

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="16dp"
            android:contentDescription="Profile Image"
            android:background="@drawable/devraf"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dev2"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/bz_almostBlack"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dev2_occupation"
                android:textSize="14sp"
                android:textColor="@color/bz_almostBlack"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/dev2_desc"
                android:textSize="12sp"
                android:textColor="@color/bz_almostBlack"
                />
        </LinearLayout>
    </LinearLayout>

    <!-- Cool Section -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🌟 Our Team Vision 🌟"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="24dp"
        android:paddingBottom="8dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dev_vision"
        android:textSize="14sp"
        android:textAlignment="center"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="🛠️ Our Skills 🛠️"
        android:textSize="20sp"
        android:textStyle="bold"
        android:paddingTop="24dp"
        android:paddingBottom="8dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dev_skills"
        android:textSize="14sp"/>

    <!-- BACK BUTTON -->
    <Button
        android:id="@+id/btn_backNavigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:textSize="16sp"
        android:layout_marginTop="24dp"
        android:layout_marginHorizontal="10dp"
        android:padding="12dp"/>
</LinearLayout>
