<?xml version="1.0" encoding="utf-8"?>

<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.Navigation.Fragments.BuildList.BuildSummaryActivity"
        android:orientation="vertical"
        app:layout_scrollEffect="compress"
        android:fadeScrollbars="true"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/bz_honeyYellow"
                android:padding="@dimen/padding_normal">

                <ImageView
                    android:id="@+id/btn_back_navigation"
                    android:layout_width="35dp"
                    android:layout_height="35dp"

                    android:layout_marginTop="@dimen/margin_normal"

                    android:src="@drawable/arrow_back_24px"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/bz_darkGray" />

                <TextView
                    android:id="@+id/tv_summary"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="Build Summary"
                    android:textColor="@color/bz_darkGray"
                    android:textSize="@dimen/font_title_large"
                    android:layout_marginTop="@dimen/margin_normal"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_BuildName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="$buildName"
                    android:textColor="@color/bz_darkGray"
                    android:textSize="@dimen/font_title_large"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_summary" />
                <TextView
                    android:id="@+id/tv_BuildBudget"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/ubuntu_bold"
                    android:text="Initial Budget: PHP %1$s"
                    android:textColor="@color/bz_darkGray"
                    android:textSize="@dimen/font_large"

                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/tv_BuildName" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/padding_normal">

                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_performance"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"

                    android:backgroundTint="@color/bz_softGray"
                    app:cardCornerRadius="10dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"

                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@color/bz_honeyYellow"
                    app:strokeWidth="3dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginHorizontal="@dimen/margin_xsmall"
                            android:layout_marginTop="10dp"

                            android:fontFamily="@font/ubuntu_bold"
                            android:text="Performance"
                            android:textColor="@color/bz_darkGray"
                            android:textSize="@dimen/font_title" />

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_marginHorizontal="@dimen/margin_xsmall"
                            android:layout_marginTop="@dimen/margin_xsmall"
                            android:fontFamily="@font/ubuntu"
                            android:text="A snapshot of your systemâ€™s strengths across key metrics."
                            android:textColor="@color/bz_darkGray"
                            android:textSize="@dimen/font_small" />

                        <FrameLayout
                            android:id="@+id/radarChartContainer"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp" />

                    </LinearLayout>
                </com.google.android.material.card.MaterialCardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_normal"

                    app:cardCornerRadius="10dp"

                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/card_performance">

                    <include layout="@layout/build_summary_compatibility_score_view" />
                </androidx.cardview.widget.CardView>

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <include
                    layout="@layout/view_component_grid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/tvTotalPrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/underline"
                android:fontFamily="@font/ubuntu_bold"
                android:padding="10dp"
                android:text="TOTAL: PHP 0.00"
                android:textAlignment="center"
                android:textColor="?attr/colorPrimary"
                android:textSize="20sp" />
        </LinearLayout>

    </ScrollView>


    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabScrollToTop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/margin_normal"

        android:visibility="visible"
        app:srcCompat="@drawable/ic_arrow_upward"

        android:backgroundTint="?attr/colorControlNormal"
        />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
