<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.BuildSummaryActivity"
    android:orientation="vertical"
    app:layout_scrollEffect="compress"
    android:fadeScrollbars="true"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
        <TextView
            android:id="@+id/tv_BuildSummary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$buildName Summary"
            android:textSize="30sp"
            android:fontFamily="@font/ubuntu_bold"
            android:layout_marginTop="50dp"
            android:layout_gravity="center_horizontal"
            />
        <androidx.cardview.widget.CardView
            android:id="@+id/radarChartContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            android:layout_marginHorizontal="50dp"
            android:layout_gravity="center_horizontal"

            >
        </androidx.cardview.widget.CardView>

        <include layout="@layout/view_component_grid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:layout_gravity="center_horizontal"

            />
        <Button
            android:id="@+id/btnSaveBuild"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Build"
            android:fontFamily="@font/ubuntu_bold"
            android:layout_marginTop="10dp"
            android:layout_marginHorizontal="50dp"
            />




    </LinearLayout>

</ScrollView>